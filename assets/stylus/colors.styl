.page
	&_theme
		&_dark
			--primary-text #e0e0e0
			--secondary-text #cccccc
			--accent-text #ffffff
			--contrast-text #ffffff
			--primary-background #201e2f
			--secondary-background #1d1d1d
			--accent-background #333333
			--shadow rgba(0, 0, 0, .14)
			--error #C0392B
			--important #ff5d5d

		&_red
			--primary #645fac
			--primary-dark darken(#645fac, 20%)
			--primary-light lighten(#645fac, 20%)
			--secondary #747474
