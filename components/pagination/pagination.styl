.pagination
	display flex

	&__item
		width 40px
		height 40px
		margin 0 2px 0 0
		color var(--secondary-text)
		font-size 18px
		line-height 40px
		text-align center
		cursor pointer
		background transparent
		border none
		border-radius 3px

		+above(size-m)
			width 48px
			height 48px
			line-height 48px

		&:disabled
			opacity .3

		&:last-child
			margin-right 0

		&:hover
			background rgba(255, 255, 255, .03)

		&_state
			&_active
				background rgba(255, 255, 255, .05)

		& .icon
			width 100%
			height 100%
			fill currentColor
